    <script>
        $(document).ready(function(){
            var $li = $("#hand_piano").find(".list li");
            $.each($li,function(i){
                $(this).css("backgroundImage","url(images/"+(i+1)+".jpg)");
            });
            $li.last().width(685);
            $li.click(function(){
                $("#box div:first").attr("class","mask");
                $("#box h1").attr("class","active");
                $(this).stop().animate({width:685},500).siblings().stop().animate({width:60},500);
                $("body").css("backgroundImage",$(this).css("backgroundImage"));
            })
        });
    </script>
